<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Doraemon" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Doraemon.Starting" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/layer_list_splash</item>
        <item name="windowSplashScreenBackground">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Doraemon</item>
    </style>
</resources>